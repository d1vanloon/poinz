{
  "name": "poinz-client",
  "version": "0.20.3",
  "description": "Distributed Planning Poker",
  "private": true,
  "author": "xeronimus@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/Zuehlke/poinz",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zuehlke/poinz.git"
  },
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.[jt]s?\" \"test/**/*.[jt]s\" \"viteConfig/**/*.[jt]s\" \"./*.[jt]s\"",
    "test": "jest",
    "pretest": "npm run lint"
  },
  "dependencies": {
    "date-fns": "4.1.0",
    "history": "5.3.0",
    "loglevel": "1.9.2",
    "nanoid": "5.1.6",
    "posthog-js": "^1.335.2",
    "purecss": "3.0.0",
    "react": "^19.2.3",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "react-linkify": "^1.0.0-alpha",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "remark-gfm": "^4.0.1",
    "reselect": "5.1.1",
    "socket.io-client": "4.8.3",
    "styled-components": "6.3.8",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@quickbaseoss/babel-plugin-styled-components-css-namespace": "1.0.1",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-jest": "30.2.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.1.0",
    "jest": "30.2.0",
    "react-test-renderer": "^19.2.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "latest"
  },
  "browserslist": [
    "defaults",
    "edge 18"
  ],
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "transform": {
      "^.+\\.[jt]sx?$": [
        "babel-jest",
        {
          "configFile": "./test/.babelrc"
        }
      ]
    },
    "testMatch": [
      "**/test/unit/**/*Test.[jt]s?(x)",
      "**/test/integration/**/*Test.[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/unit/setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!nanoid).+\\.js$"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "<rootDir>/test/styleMock.js"
    }
  }
}
